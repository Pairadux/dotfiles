{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "fixed-center": true,
    "margin-left": 10,
    "margin-right": 10,
    "margin-top": 7,
    "margin-bottom": 0,
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "reload_style_on_change": true,
    "modules-left": [
        "custom/padd",
        "hyprland/workspaces",
        "custom/spacer",
        "mpris"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "network",
        "pulseaudio",
        "pulseaudio/slider",
        "memory",
        "cpu",
        "clock",
        "custom/notification",
        "custom/padd"
    ],
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "‰∏Ä",
            "2": "‰∫å",
            "3": "‰∏â",
            "4": "Âõõ",
            "5": "‰∫î",
            "6": "ÂÖ≠",
            "7": "‰∏É",
            "8": "ÂÖ´",
            "9": "‰πù",
            "10": "ÂçÅ",
            "special": "Èõ∂"
        },
        "persistent-workspaces": {
            "DP-2": [1],
            "HDMI-A-1": [2]
        },
        "show-special": true,
        "special-visible-only": true
    },
    "mpris": {
        "format": "{player_icon}  {dynamic}",
        "format-paused": "<span color='grey'>{status_icon} {dynamic}</span>",
        "max-length": 50,
        "player-icons": {
            "default": "‚è∏",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚ñ∂"
        }
    },
    "hyprland/window": {
        //"format": "{}"   // <--- these is the default value  
        "format": "{initialTitle}",
        "max-length": 120,
        "icon": false,
        "icon-size": 13
    },
    "custom/script": {
        "on-click": "~/.config/waybar/volume.sh toggle",
        "format": "ÔÄ® "
    },
    "custom/spotify": {
        "exec": "mediaplayer.py --player spotify",
        "format": "ÔÜº {}",
        "rotate": 0,
        "return-type": "json",
        "on-click": "playerctl play-pause --player spotify",
        "on-click-right": "playerctl next --player spotify",
        "on-click-middle": "playerctl previous --player spotify",
        "on-scroll-up": "volumecontrol.sh -p spotify i",
        "on-scroll-down": "volumecontrol.sh -p spotify d",
        "max-length": 25,
        "escape": true,
        "tooltip": true
    },
    "network": {
        "tooltip": true,
        "format-wifi": "{icon}‚Äâ",
        "format-icons": [
            "Û∞§ü",
            "Û∞§¢",
            "Û∞§•"
        ],
        "rotate": 0,
        "format-ethernet": "Û∞àÄ ",
        "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>\nIP: <b>{ipaddr}/{cidr}</b>\nGateway: <b>{gwaddr}</b>\nNetmask: <b>{netmask}</b>",
        "format-linked": "Û∞àÄ {ifname} (No IP)",
        "format-disconnected": "ÔÅ™ ",
        "tooltip-format-disconnected": "Disconnected",
        "on-click": "nm-connection-editor",
        "interval": 2
    },
    "pulseaudio": {
        "format": "{icon}",
        "rotate": 0,
        "format-muted": "Ô™Ä",
        "tooltip-format": "{icon}  {desc} // {volume}%",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶ ",
                "ÔÄß ",
                "ÔÄ® "
            ]
        },
        "on-click": "pavucontrol"
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "rotate": 0,
        "device": "pulseaudio",
        "scroll-step": 5
    },
    "memory": {
        "interval": 1,
        "rotate": 0,
        "format": "{icon}",
        "format-icons": [
            "Û∞ù¶ ",
            "Û∞™û ",
            "Û∞™ü ",
            "Û∞™† ",
            "Û∞™° ",
            "Û∞™¢ ",
            "Û∞™£ ",
            "Û∞™§ ",
            "Û∞™• "
        ],
        "max-length": 10
    },
    "cpu": {
        "interval": 1,
        "format": "{icon}",
        "rotate": 0,
        "format-icons": [
            "Û∞ù¶ ",
            "Û∞™û ",
            "Û∞™ü ",
            "Û∞™† ",
            "Û∞™° ",
            "Û∞™¢ ",
            "Û∞™£ ",
            "Û∞™§ ",
            "Û∞™• "
        ]
    },
    "clock": {
        "format": "{:%I:%M %p}",
        "rotate": 0,
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b>{}</b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode"
        }
    },
    // modules for padding //
    "custom/spacer": {
        "format": "|"
    },
    "custom/smallspacer": {
        "format": "‚Äâ"
    },
    "custom/l_end": {
        "format": " ",
        "interval": "once",
        "tooltip": false
    },
    "custom/r_end": {
        "format": " ",
        "interval": "once",
        "tooltip": false
    },
    "custom/padd": {
        "format": "  ",
        "interval": "once",
        "tooltip": false
    }
}

