{{- $yPadding := 2 }}
{{- if eq .chezmoi.os "darwin" }}
{{-   $yPadding = 4 }}
{{- end -}}
# +----------+
# | KEYBINDS |
# +----------+
keybind = ctrl+tab=unbind
keybind = ctrl+shift+tab=unbind

keybind = ctrl+tab=csi:9;5u
keybind = ctrl+shift+tab=csi:9;6u
keybind = shift+tab=csi:9;2u

keybind = shift+enter=csi:13;2u
keybind = ctrl+enter=csi:13;5u
keybind = ctrl+shift+enter=csi:13;6u

# +------+
# | FONT |
# +------+
font-family             = "FiraCode Nerd Font Mono"  
font-family-bold        = "FiraCode Nerd Font Mono"  
font-family-italic      = "VictorMono Nerd Font Mono"  
font-family-bold-italic = "VictorMono Nerd Font Mono"  

font-style              = ""  
font-style-bold         = ""  
font-style-italic       = "Medium Italic"  
font-style-bold-italic  = "Bold Oblique"  

font-size    = 14
font-thicken = true

# +-------+
# | THEME |
# +-------+
theme = TokyoNight

# +--------+
# | WINDOW |
# +--------+
window-decoration = auto
window-save-state = always
window-padding-x       = 0
window-padding-y       = {{ $yPadding }},0
window-padding-balance = true
window-padding-color   = extend
macos-titlebar-style = hidden

# +----------+
# | BEHAVIOR |
# +----------+
confirm-close-surface = false

# +-------------------+
# | SHELL INTEGRATION |
# +-------------------+
shell-integration-features = cursor,no-sudo,title,ssh-env,ssh-terminfo,path

# +------------+
# | MACOS ICON |
# +------------+
macos-icon = custom
macos-custom-icon = ~/.config/ghostty/assets/ghostty-original.icns

# +---------------+
# | CURSOR SHADER |
# +---------------+
custom-shader = ~/.config/ghostty/shaders/cursor_warp.glsl
